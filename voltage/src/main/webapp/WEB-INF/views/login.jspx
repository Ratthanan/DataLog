                <!--</span>-->
                <!--</div>-->

                <div class="col-3 input-effect">
                    <input class="effect-20" style="font-size: 20px; width: 100%;" id="j_username" type="text" name="j_username" autocomplete="off" placeholder="${label_security_username}" required="true"/>
                    <span class="focus-border">
                    <i><jsp:text/></i>
                    </span>
                </div>
                <br/>
                <div class="col-3 input-effect">

                    <input style="font-size: 20px; width: 100%;" id="j_password" type="password" name="j_password" autocomplete="off" placeholder="${label_security_password}" required="true"/>
                    <span class="focus-border">
                    <i><jsp:text/></i>
                    </span>

                </div>
                <button style="width: 20%;" type="submit" id="submit_button">
                    <!--<i class="spinner"><jsp:text/></i>-->
                    <span class="state" style="font-size: 20px;">Log in</span>
                </button>
            </center>
            <!--<p class="title"><img class="img-responsive" src="${img_title_login}" style="width: 100%" /> </p>-->





            <div style="width: 20%;"  role="alert" id="_alert_login_fail_id" >

                <!--<p  style="color: red; width: 20%; font-weight: 600" id="textError">-->
                    <!--<c:out value="${SPRING_SECURITY_LAST_EXCEPTION.message}"/>-->
                <!--</p>-->

            </div>




            <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
            <input type="hidden" id="screen_width" name="screen_width" value=""/>
            <input type="hidden" id="screen_height" name="screen_height" value=""/>
            <input type="hidden" name="spring-security-redirect" value="${sessionScope.redirect_url}" />



            <script type="text/javascript">
                document.getElementById('screen_width').value=screen.width;
                document.getElementById('screen_height').value=screen.height;


                function changeThai() {
                    window.location.assign("?lang=th")
                }
                function changeEng() {
                    window.location.assign("?lang=en")
                }

                function dowmloadUser() {
                    window.location.href = "/GWF/downloadUserManual/user"
                }

                function dowmloadApprove() {
                    window.location.href = "/GWF/downloadUserManual/approver"
                }

                 function dowmloadAccount() {
                    window.location.href = "/GWF/downloadUserManual/account"
                }

            </script>

        </form>


    </div>
